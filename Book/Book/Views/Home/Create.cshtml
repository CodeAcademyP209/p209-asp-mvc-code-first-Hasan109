@model Book.Models.Books



<div class="container">
    
    <form  method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(m => m.BookName)
            @Html.TextBoxFor(m => m.BookName, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Genre)
            @Html.TextBoxFor(m => m.Genre, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Author)
            @Html.TextBoxFor(m => m.Author, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Page)
            @Html.TextBoxFor(m => m.Page, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Photo)
            @Html.TextBoxFor(m => m.Photo, new { @class = "form-control", type = "file" })
        </div>

        <input type="submit" class="btn btn-success" value="Create Book" />

    </form>

</div>

