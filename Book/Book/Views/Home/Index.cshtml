@model IEnumerable<Book.Models.Books>
<div class="container">

    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">BookName</th>
                <th scope="col">Author</th>
                <th scope="col">Genre</th>
                <th scope="col">Page</th>
                <th scope="col">ISBN</th>
                <th scope="col">Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {


            <tr>
                <td>@book.BookName</td>
                <td>@book.Author</td>
                <td>@book.Genre</td>
                <td>@book.Page</td>
                <td>@book.ISBN</td>
                <td>
                    <img style="width:100px" src="~/Image/@(book.Image != null ? book.Image:"no.png")" alt="Alternate Text" />
                </td>
                <td><a href="Home/Delete?Id=@book.Id">Delete</a></td>

            </tr>

            }
        </tbody>
    </table>



</div>